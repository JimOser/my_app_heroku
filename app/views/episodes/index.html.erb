<h1>Episodes</h1>

<%= link_to 'New Episode', new_podcast_episode_path(@podcast), class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Released On</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.number %></td>
        <td><%= episode.title %></td>
        <td><%= episode.released_on %></td>
        <td><%= link_to 'Show', podcast_episode_path(@podcast, episode) %></td>
        <td><%= link_to 'Edit', edit_podcast_episode_path(@podcast, episode) %></td>
        <td><%= link_to 'Destroy', podcast_episode_path(@podcast, episode), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

